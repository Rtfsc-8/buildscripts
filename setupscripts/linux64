SCRIPTDIR=`dirname $0`

CMAKE_BUILD_TYPE=Release

if [ "$1" = "-g" ]; then
	CMAKE_BUILD_TYPE=RelWithDebInfo
	shift
fi

export CFLAGS='-Wall'

. $SCRIPTDIR/jarvars

cmake -G"Unix Makefiles" -DCMAKE_BUILD_TYPE=${CMAKE_BUILD_TYPE} \
	-DCMAKE_JAVA_COMPILE_FLAGS='-target 1.6 -source 1.6 -Xlint:all,-serial,-cast,-unchecked,-rawtypes' \
	-DTVNC_BUILDJAVA=1 -DTVNC_INCLUDEJNIJARS=1 \
	"${CMAKEARGS[@]}" .. ${1+"$@"}
